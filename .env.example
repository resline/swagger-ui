# Swagger UI Configuration
# Copy this file to .env and adjust the values for your environment
#
# SECURITY NOTICE:
# - All placeholder values starting with "CHANGE_ME_" MUST be replaced with secure values
# - Use ./scripts/manage-secrets.sh to generate cryptographically secure passwords
# - Never use default or example passwords in production
# - Ensure passwords meet minimum requirements: 16+ chars, mixed case, numbers, special chars

# Application Configuration
SWAGGER_UI_PORT=8080
# API Key for authentication - REQUIRED for production
# Generate using: ./scripts/manage-secrets.sh generate-api-key
# Should be at least 32 characters long and cryptographically secure
API_KEY=CHANGE_ME_SECURE_API_KEY_REQUIRED
SWAGGER_JSON=/app/swagger.json
SWAGGER_JSON_URL=
BASE_URL=/
CORS=true
EMBEDDING=false

# Security Configuration
# Set to 'true' in production to enable HTTPS
FORCE_HTTPS=false

# Domain configuration for Traefik
SWAGGER_DOMAIN=localhost

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
NGINX_EXPORTER_PORT=9113
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Grafana Credentials - MUST BE CHANGED FOR SECURITY
# Generate secure passwords using: ./scripts/manage-secrets.sh generate-password
# Password requirements: minimum 16 characters, mixed case, numbers, special chars
# Example generation: openssl rand -base64 24 | tr -d "=+/" | cut -c1-20
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_SECURE_PASSWORD_REQUIRED

# Database Configuration (if needed)
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
# Database password - MUST be secure if database is used
# Generate using: ./scripts/manage-secrets.sh generate-password 32
# Should be minimum 16 characters with mixed case, numbers, special chars
DB_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD_IF_USED

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Tuning
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=30
API_RATE_LIMIT_REQUESTS_PER_SECOND=10
AUTH_RATE_LIMIT_REQUESTS_PER_SECOND=5

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# External Services
EXTERNAL_API_ENDPOINT=
# External API key - secure credential for external service access
# Obtain from your external service provider
# Should be treated as a sensitive credential
EXTERNAL_API_KEY=CHANGE_ME_EXTERNAL_API_KEY_IF_USED

# Development Configuration
NODE_ENV=production
DEBUG=false
DEVELOPMENT_MODE=false

# Container Security
RUN_AS_NON_ROOT=true
READ_ONLY_ROOT_FILESYSTEM=true
NO_NEW_PRIVILEGES=true

# Resource Limits
MEMORY_LIMIT=256m
CPU_LIMIT=0.5

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16