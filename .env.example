# Swagger UI Configuration
# Copy this file to .env and adjust the values for your environment

# Application Configuration
SWAGGER_UI_PORT=8080
API_KEY=
SWAGGER_JSON=/app/swagger.json
SWAGGER_JSON_URL=
BASE_URL=/
CORS=true
EMBEDDING=false

# Security Configuration
# Set to 'true' in production to enable HTTPS
FORCE_HTTPS=false

# Domain configuration for Traefik
SWAGGER_DOMAIN=localhost

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
NGINX_EXPORTER_PORT=9113
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Grafana Credentials (Change these!)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Database Configuration (if needed)
DB_HOST=
DB_PORT=
DB_NAME=
DB_USER=
DB_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Tuning
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=30
API_RATE_LIMIT_REQUESTS_PER_SECOND=10
AUTH_RATE_LIMIT_REQUESTS_PER_SECOND=5

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# External Services
EXTERNAL_API_ENDPOINT=
EXTERNAL_API_KEY=

# Development Configuration
NODE_ENV=production
DEBUG=false
DEVELOPMENT_MODE=false

# Container Security
RUN_AS_NON_ROOT=true
READ_ONLY_ROOT_FILESYSTEM=true
NO_NEW_PRIVILEGES=true

# Resource Limits
MEMORY_LIMIT=256m
CPU_LIMIT=0.5

# Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16